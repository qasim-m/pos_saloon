<h5> <%= link_to " Back to HomePage", root_path %> </h5>
<br>
<h4>Your Sales</h4>

<br>
<table class="table table-sm table-striped ml-4" style="max-width: 50rem;">
  <thead class="table-dark">
      <tr>
        <th>Provider Name</th>
        <th>Date/Time</th>
        <th>Payment Type</th>
        <th>Total Amount</th>
        <th>Customer Name</th>
        <th>Customer Phone</th>
    </tr>
   </thead >
  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%=[sale.user.first_name , sale.user.last_name].join(" ") %></td>
        <td><%= DateTime.parse(sale.created_at.to_s).strftime("%d-%m-%Y %I:%M %p") %></td>
        <td><%= sale.payment_methode %> </td>
        <td><%= sale.total %> </td>
        <td><%= sale.customer.name %></td>
        <td><%= sale.customer.phone %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

